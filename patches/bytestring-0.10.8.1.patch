+public class Utils {
+    public static final long LONG_MIN = Long.MIN_VALUE;
+    public static final long ONE_MIN = 1 + LONG_MIN;
+    public static final long ZERO_MIN = 0 + LONG_MIN;
+    public static final long UNSIGNED_TEN = ((long) 10) & 0xFFFFFFFF;
+
+    public static int strlen(ByteBuffer b) {
+        int n = 0;
+        while (b.get() != 0) {
+            n++;
+        }
+        b.rewind();
+        return n;
+    }
+
+    public static ByteBuffer memchr(ByteBuffer b, int c, int n) {
+        c = (int)((byte) c);
+
+        // TODO: Deal with size properly
+        while (n-- != 0) {
+            if (b.get() == c) {
+                ByteBuffer res = (ByteBuffer) b.duplicate().position(b.position() - 1);
+                b.rewind();
+                return res;
+            }
+        }
+        b.rewind();
+        return null;
+    }
+
+    public static int memcmp(StgClosure b1, StgClosure b2, int n) {
+        return memcmp(((StgByteArray) b1).buf, ((StgByteArray) b2).buf, n);
+    }
+
+    public static int memcmp(ByteBuffer b1, ByteBuffer b2, int n) {
+        // TODO: Deal with size properly
+        while (n-- != 0) {
+            int a = b1.get() & 0xFF;
+            int b = b2.get() & 0xFF;
+            if (a != b) {
+                b1.rewind();
+                b2.rewind();
+                return a - b;
+            }
+        }
+        b1.rewind();
+        b2.rewind();
+        return 0;
+    }
+
+    public static ByteBuffer memcpy(ByteBuffer dest, ByteBuffer src, int size) {
+        // TODO: Deal with size properly
+        while (size-- != 0) {
+            dest.put(src.get());
+        }
+        src.rewind();
+        return (ByteBuffer) dest.rewind();
+    }
+
+    public static ByteBuffer memset(ByteBuffer b, int c_, int size) {
+        byte c = (byte) c_;
